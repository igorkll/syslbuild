{
    "builditems": [
        {
            "type": "arch-linux",
            "name": "arch directory",
            "export": true,

            "pacman_conf": {
                "options": {
                    "SigLevel": "Never"
                },
                "_auto": {
                    "Server": "https://archive.archlinux.org/repos/2024/05/15/$repo/os/$arch"
                }
            },

            "include": [
                "base",
                "linux",
                "linux-firmware",
                "cowsay"
            ],
            "withoutDependencies": false
        },
